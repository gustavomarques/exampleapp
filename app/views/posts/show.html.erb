<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<% if @post.image? %>
<p>
  <b>Image:</b>
  <%= image_tag(@post.image.thumb) %>
</p>
<% end %>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
